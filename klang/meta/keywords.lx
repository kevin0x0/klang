import "charset/unicode

# comment = $#[^\n\r\xFF]*
# func-name = $([A-Za-z_] | [:uni-non-ascii:])([A-Za-z0-9_] | [:uni-non-ascii:])*
def integer(KLTK_INT):
  (KLTK_INT) $[1-9][0-9]* | 0[0-9]* | 0[xX][A-Fa-f0-9]+

